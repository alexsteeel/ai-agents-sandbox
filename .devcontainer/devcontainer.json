{
  "name": "Claude Code Sandbox (Compose)",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "containerUser": "claude",
  "updateRemoteUserUID": false,
  "initializeCommand": ["bash", "-c", "cd \"${localWorkspaceFolder}/.devcontainer\" && ./initialize.sh \"${localWorkspaceFolder}\""],
  "postCreateCommand": "/home/claude/scripts/non-root-post-create.sh",
  "remoteEnv": {
    "JETBRAINS_REMOTE_RUN": "true"
  }
}