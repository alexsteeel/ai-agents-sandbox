{
  "name": "${localWorkspaceFolderBasename} - Claude Code Sandbox",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "containerUser": "claude",
  "updateRemoteUserUID": false,
  "initializeCommand": ["bash", "-c", "cd \"${localWorkspaceFolder}/.devcontainer\" && INITIALIZE_MODE=vscode ./initialize.sh \"${localWorkspaceFolder}\""],
  "postCreateCommand": "/home/claude/scripts/non-root-post-create.sh",
  "remoteEnv": {
    "PROJECT_NAME": "${localWorkspaceFolderBasename}"
  }
}