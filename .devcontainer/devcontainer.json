{
  "name": "Claude Code Sandbox",
  "image": "claude-code-sandbox-ul:1.0",
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--cap-add=SYS_ADMIN",
    "--cap-add=DAC_READ_SEARCH",
    "--security-opt=apparmor=unconfined",
    "--name=claude-dev-environment",
    "--network=claude-sandbox-network"
  ],
  "containerUser": "claude",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/claude/.claude,type=volume",
    "type=bind,source=${env:HOME}/.claude-docker-certs,target=/certs/client,readonly"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/claude/.claude",
    "DOCKER_HOST": "tcp://docker:2376",
    "DOCKER_TLS_VERIFY": "1",
    "DOCKER_CERT_PATH": "/certs/client"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "sudo /usr/local/bin/init-firewall.sh"
}
